# Media Gateway Environment Variables
# Copy this file to .env and update values for your environment

# Database Configuration
DATABASE_URL=postgresql://mediagateway:localdev123@localhost:5432/media_gateway
POSTGRES_USER=mediagateway
POSTGRES_PASSWORD=localdev123
POSTGRES_DB=media_gateway

# Redis Configuration
REDIS_URL=redis://localhost:6379

# Qdrant Configuration
QDRANT_URL=http://localhost:6333
QDRANT_GRPC_URL=http://localhost:6334

# OpenAI Configuration (for embeddings)
OPENAI_API_KEY=sk-your-api-key-here

# PubNub Configuration (for real-time sync)
PUBNUB_PUBLISH_KEY=pub-c-your-key
PUBNUB_SUBSCRIBE_KEY=sub-c-your-key

# JWT Configuration
JWT_PRIVATE_KEY_PATH=./tests/fixtures/test_private_key.pem
JWT_PUBLIC_KEY_PATH=./tests/fixtures/test_public_key.pem
JWT_ISSUER=https://api.mediagateway.io
JWT_AUDIENCE=mediagateway-users

# Service Ports
API_PORT=8080
DISCOVERY_PORT=8081
SONA_PORT=8082
SYNC_PORT=8083
AUTH_PORT=8084
INGESTION_PORT=8085
PLAYBACK_PORT=8086
MCP_PORT=3000

# Logging
RUST_LOG=info,media_gateway=debug
NODE_ENV=development
